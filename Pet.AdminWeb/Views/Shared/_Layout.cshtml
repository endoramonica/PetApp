<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pet.AdminWeb</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <script src="~/js/Components/dark-mode-toggle.js"></script>
</head>
<body>
    <div class="wrapper d-flex flex-column min-vh-100">
        <!-- Header -->
        <header>
            <nav class="navbar navbar-expand-lg container glass-card hover-lift">
                <!-- Logo -->
                <a class="navbar-brand gradient-text pulse-animation" href="/">
                    <i class="fas fa-paw me-2"></i> Pet.AdminWeb
                </a>

                <!-- Toggle button on mobile -->
                <button class="navbar-toggler btn hover-scale" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fas fa-bars"></span>
                </button>

                <!-- Navbar content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left menu items -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link hover-lift" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-lift" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-shopping-bag me-1"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-lift" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Right icons and login -->
                    <div class="d-flex align-items-center gap-3">
                        <!-- Search -->
                        <div class="search-container d-none d-md-block">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" class="form-control form-control-sm search-input" placeholder="Search..." style="width: 180px;" />
                        </div>

                        <!-- Wishlist -->
                        <a class="btn btn-sm position-relative hover-scale" asp-controller="Wishlist" asp-action="Index" title="Wishlist">
                            <i class="fas fa-heart"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                        </a>

                        <!-- Cart -->
                        <a class="btn btn-sm position-relative hover-scale" asp-controller="Cart" asp-action="Index" title="Cart">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">5</span>
                        </a>

                        <!-- Dark Mode -->
                        <button id="dark-mode-toggle" class="btn btn-sm hover-scale magnetic" title="Toggle Theme">
                            <i class="fas fa-moon"></i>
                        </button>

                        <!-- Login/Register Partial -->
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main Content -->
        <main role="main" class="container flex-grow-1">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="footer container glass-card text-center mt-4" style="padding: 1rem;">
            <p class="gradient-text">
                © @DateTime.Now.Year - Pet.AdminWeb -
                <a class="hover-lift" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </p>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
